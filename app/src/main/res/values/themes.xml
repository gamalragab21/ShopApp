<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
<!--        default bachground of widget-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <!--        default status  of widget-->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        .<!--        default text color   of widget-->
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="text_input_style" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
       <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
       <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
       <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
       <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/colorAccent</item>
        <item name="helperTextTextColor">@android:color/holo_red_dark</item>
    </style>

    <style name="button_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>
    <style name="button_gray_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="button_facebook_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">#4267B2</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="icon">@drawable/facebook</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="button_google_style" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@android:color/holo_blue_dark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/google</item>
        <item name="iconTint">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

</resources>